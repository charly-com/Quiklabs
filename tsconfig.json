{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/renderer",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/renderer/**/*", "src/main.tsx"],
  "exclude": ["node_modules", "dist", "src/main/**/*"]
}